						localStorage["news_id"] = id;
						//$.mobile.changePage('getNews.html', { transition: 'pop', role: 'dialog'});
						$(':mobile-pagecontainer').pagecontainer( "change", "getNews.html", { role: "dialog" });

					}
</script>   
